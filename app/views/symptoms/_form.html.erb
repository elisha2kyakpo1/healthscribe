<%= form_with(model: symptom) do |form|%>
  <% if symptom.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(symptom.errors.count, "error") %> prohibited this symptom from being saved:</h2>

      <ul>
        <% symptom.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="col-md-8 mx-auto rounded mt-5 pb-5 bg-light">
      <header class="text-center py-3 w-100 medication rounded px-4 text-light d-flex justify-content-between">
      <p class="mb-0"> <%= link_to '<i class="text-white fa-solid fa-arrow-left"></i>'.html_safe, entries_index_path %></p>
      <p class="mb-0 mx-auto d-flex text-white">
          <%= svg_tag "Symptom"%>
          Symptom
      </p>
      </header>
      <div class="px-4 pb-4 pt-4 d-flex flex-column flex-md-row justify-content-md-between">
        <div class="flex-child-cont px-5">
          <div class="d-flex justify-content-between">
            <div class="d-block">
              <%= form.label :date, style: "display: block", class: "mb-2" %>
              <%= form.datetime_field :date, class: "w-100 rounded py-2 py-md-3 border px-2" %>
            </div>
            <div class="d-block">
              <%= form.label :time, style: "display: block", class: "mb-2" %>
              <%= form.time_field :time, class: "rounded py-2 py-md-3 border px-2" %>
            </div>
          </div>

          <h5 class="mt-5">Drag the sliders to indicate the intensity</h5>
            <div class="">
              <div class="d-flex justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                <%= form.label :headache, class: "form-label"%>
                <%= form.range_field :headache, min:0, max:5, class:"form-range", id:"slider1" %>
              </div>
              <div class="d-flex justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                <%= form.label :diarrhea, class: "form-label"%>
                <%= form.range_field :diarrhea, min:0, max:5, class:"form-range", id:"slider2" %>
              </div>
              <div class="d-flex justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                <%= form.label :cosntipation, class: "form-label"%>
                <%= form.range_field :cosntipation, min:0, max:5, class:"form-range", id:"slider3" %>
              </div>
              <div class="d-flex justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                <%= form.label :nausea, class: "form-label"%>
                <%= form.range_field :nausea, min:0, max:5, class:"form-range", id:"slider4" %>
              </div>
              <div class="d-flex justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                <%= form.label :fever, class: "form-label"%>
                <%= form.range_field :fever, min:0, max:5, class:"form-range", id:"slider5" %>
              </div>
              <div class="d-flex justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                <%= form.label :vomiting, class: "form-label"%>
                <%= form.range_field :vomiting, min:0, max:5, class:"form-range", id:"slider6" %>
              </div>
              <div class="d-flex justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                <%= form.label :stomach_ache, class: "form-label"%>
                <%= form.range_field :stomach_ache, min:0, max:5, class:"form-range", id:"slider7" %>
              </div>

              <div class="col-12 col-md-5">
                <%= form.label :comment, class: "mb-2 rounded" %>
                <%= form.text_area :comment, cols:50, rows:5, class: "rounded" %>
              </div>
            </div>
          </div>
        </div>
      </div>  
    </div>
    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %>