<%= form_with(model: symptom) do |form|%>
  <% if symptom.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(symptom.errors.count, "error") %> prohibited this symptom from being saved:</h2>

      <ul>
        <% symptom.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="col-md-8 mx-auto pb-5 bg-light">
      <header class="text-center header align-items-center w-100 medication px-4 text-light d-flex justify-content-between">
        <p class="mb-0"> <%= link_to '<i class="text-white fa-solid fa-arrow-left"></i>'.html_safe, user_path(current_user) %></p>
        <div class="mb-0 mx-auto d-flex align-items-center text-white">
          <%= svg_tag "Symptom", class: "form-icon"%>
          <span class="ml-5">Symptom</span>
        </div>
      </header>
      <div class="px-4 pt-4 d-flex flex-column flex-md-row justify-content-md-between">
        <div class="flex-child-cont px-5">
          <div class="d-flex justify-content-between">
            <div class="d-block">
              <%= form.label :date, style: "display: block", class: "mb-2" %>
              <%= form.date_field :date, class: "w-100 rounded py-2 py-md-3 border px-2", value: Time.now.strftime('%Y-%m-%d') %>
            </div>
            <div class="d-block">
              <%= form.label :time, style: "display: block", class: "mb-2" %>
              <%= form.time_field :time, class: "rounded py-2 py-md-3 border px-2", value: Time.now.strftime("%H:%M") %>
            </div>
          </div>

          <h5 class="mt-2">Drag the sliders to indicate the intensity</h5>
            <div class="">
                <div class="d-flex flex-column justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                  <%= form.label :headache %>
                  <%= form.range_field :headache, in: 0..3, class:"form-range", min:0, max:3, step:1, value:0, data: { controller: 'range-slider' } %>
                  <span data-target="range-slider.value" data-range-slider-field="headache"></span>
                  <%= form.label :fever%>
                  <%= form.range_field :fever, in: 0..3, class:"form-range", min:0, max:3, step:1, value:0 %>

                  <%= form.label :stomach_ache %>
                  <%= form.range_field :stomach_ache, in: 0..3, class:"form-range", min:0, max:3, step:1, value:0 %>
                  <%= form.label :nausea %>
                  <%= form.range_field :nausea, in: 0..3, class:"form-range", min:0, max:3, step:1, value:0 %>

                  <%= form.label :vomiting %>
                  <%= form.range_field :vomiting, in: 0..3, class:"form-range", min:0, max:3, step:1, value:0 %>

                  <%= form.label :cosntipation %>
                  <%= form.range_field :cosntipation, in: 0..3, class:"form-range", min:0, max:3, step:1, value:0 %>
                </div>
              <div class="mt-5">
                <%= form.label :comment, class: "mb-2 rounded" %>
                <%= form.text_area :comment, rows:5, class: "form-control rounded w-100" %>
              </div>

             <div class="d-flex justify-content-center justify-content-md-end gap-4 mt-4 me-4">
                <%= link_to "Cancel", entries_index_path, class:"mt-4 border-0 bg-transparent fw-bold px-5 py-3 rounded-pill text-Pr" %>
                <%= form.submit "Save", class:"mt-4 border px-5 py-3 fw-bold rounded-pill bgPr text-white" %>
              </div>
            </div>
          </div>
        </div>
      </div>  
    </div>
  </div>
<% end %>