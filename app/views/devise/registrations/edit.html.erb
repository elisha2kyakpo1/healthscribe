<div class="d-flex signup_div pb-5 justify-content-center ">
  <div class="signup">
     <div>
      <div class='w-100 header'>
        <div class='container d-flex flex-column justify-content-end align-items-center'>
          <div class='d-flex gap-2 gap-md-4 align-items-center justify-content-between'>
            <h2 class='para text-white mb-0'>Edit Your <%= resource_name.to_s.humanize%> Account</h2>
          </div>
        </div>
      </div>
    </div>
    
    <div class="contain">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field signup__field">
          <%= f.label :email, class: "signup__label pb-3" %><br />
          <%= f.email_field :email, class: "signup__input", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field signup__field">
          <%= f.label :password, class: "signup__label" %> <i>(leave blank if you don't want to change the password)</i><br />
          <%= f.password_field :password, class: "signup__input", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field signup__field">
          <%= f.label :password_confirmation, class: "signup__label" %><br />
          <%= f.password_field :password_confirmation, class: "signup__input", autocomplete: "new-password" %>
        </div>

        <div class="field signup__field">
          <%= f.label :current_password, class: "signup__label" %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, class: "signup__input", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn w-100 mb-1" %>
        </div>
      <% end %>

      <h4>Cancel my account</h4>

      <p>Unhappy? <span><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></span></p>
      <div class="actions text-center">
        <%= link_to "Back", :back , class: "text-center w-100"%>
      <div>
    </div>
  </div>
</div>