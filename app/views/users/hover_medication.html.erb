<%= turbo_frame_tag dom_id(current_user, :thumbnail) do %>
  <div class="">
    <%#= current_user.full_name%>
    <% if current_user.medications.any? %>
      <% current_user.medications.each do |medication| %>
        <% if !medication.comment%>
          <p class="mt-2 mb-0"><%= medication.comment %></p>
        <% else %>
          <p class="mt-2 mb-0">No comment recorded for this medication!</p>
        <% end %>
        <small><%= time_ago_in_words(medication.created_at) %> ago </small>
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "Edit", edit_medication_path(medication), class:"editbtn" %>
          <div class="deletebtn">
            <%= button_to "Delete", medication_path(medication), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No medication recorded!</p>
    <% end %>
  </div>
<% end%>