<%= turbo_frame_tag dom_id(current_user, :thumbnail) do %>
  <div class="">
    <% if current_user.moods.any? %>
      <% current_user.moods.each do |mood| %>
        <% if !mood.comment%>
          <p class="mt-2 mb-0"><%= mood.comment %></p>
        <% else %>
          <p class="mt-2 mb-0">No comment recorded for this mood!</p>
        <% end %>
        <small><%= time_ago_in_words(mood.created_at) %> ago </small>
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "Edit", edit_mood_path(mood), class:"editbtn" %>
          <div class="deletebtn">
            <%= button_to "Delete", mood_path(mood), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No moods recorded!</p>
    <% end %>
  </div>
<% end %>
