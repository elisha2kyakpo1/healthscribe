<%= turbo_frame_tag dom_id(current_user, :thumbnail) do %>
  <div class="">
    <%#= current_user.full_name%>
    <% if current_user.foods.any? %>
      <% current_user.foods.each do |food| %>
        <% if food.comment%>
          <p class="mt-2 mb-0"><%= food.comment %></p>
        <% else %>
          <p class="mt-2 mb-0">No comment recorded for this food!</p>
        <% end %>
        <small><%= time_ago_in_words(food.created_at) %> ago </small>
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "Edit", edit_food_path(food), class:"editbtn" %>
          <div class="deletebtn">
            <%= button_to "Delete", food_path(food), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No food recorded!</p>
    <% end %>
  </div>
<% end %>