<%= turbo_frame_tag "modal" do %>
   <%= tag.div data: { controller: "modal",
                      modal_target: "modal",
                      action: "turbo:submit-end->modal#submitEnd keyup@window->modal#closeWithKeyboard click@window->modal#closeBackground" },
                      class: "popup" do %>
    <div class="">
      <%= button_tag '<i class="fa-sharp fa-solid fa-xmark"></i>'.html_safe, data: { action: "modal#hideModal" }, type: "button", class: "close-btn" %>
     <ul class="navlist pl-0" aria-expanded="false" data-toggle-target="ariaExpander" data-toggle-close="true">
      <% if current_user %>
        <div class="name mt-0">
          <div class="more-data">
            <div class="mb-2 d-flex align-items-center">
              <%= svg_tag "Profile", class: "img" %> <p><%= link_to "#{current_user.full_name}", class: "name" %></p>
            </div>
          </div>
        </div>
        <div class="more-data d-flex align-items-center">
          <div>
            <p><%= link_to "My profile ", edit_user_registration_path, class: 'profile' %></p>
            <p><%= link_to "Home", root_path, class: 'profile' %></p>
            <p><%= link_to "Export data" %></p>
            <p><%= link_to "Privacy & Terms" %></p>
          </div>
        </div>
        <li class="account text-center pt-2"><%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-dark" %></li>
        <% else %>
        <li class="account text-center pt-2"> <%= link_to 'Sign in', user_session_path, class: "" %></li>
      <% end %>
    <ul>
    </div>
  <% end %>
<% end %>