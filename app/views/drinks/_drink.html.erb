<section class="gradient-custom-5">
  <div class="container">
    <div class="main-timeline-5">
      <div class="timeline-5 right-5">
        <div class="">
          <div class="card-body p-4">
            <%= svg_tag "Drink", class: "show-icon"%>
            <h5 class="card-title">Drink</h5>
            <h5><%= drink.name %></h5>
            <span class="small text-muted"><i class="fas fa-clock me-1"></i><%= drink.date.strftime("%F") %>|<%= drink.time.strftime("%H:%M") %></span>
            <p class="mt-2 mb-0"><%= drink.comment %></p>
            <%= link_to "View Details", drink, class: "view btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
