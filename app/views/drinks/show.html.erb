<div class="position-relative">
  <p style="color: green"><%= notice %></p>

  <%= render @drink %>

  <div class="position-absolute action-btn d-flex justify-content-between">
  <%= link_to '<i class="fa-solid fa-pencil mr-2"></i>'.html_safe, edit_drink_path(@drink) %>
  <%= button_to '<i class="fa-solid fa-trash"></i>'.html_safe, drink_path(@drink), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
   <%= link_to '<i class="fa-solid fa-arrow-rotate-left"></i>'.html_safe, timeline_path %>
  </div>
</div